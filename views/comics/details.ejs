<% include ../partials/header %>
    <a href="/comics" class="btn btn-default">Go Back</a>
    <h1><%=comic.title %></h1>
    <div class="row comic">
        <div class="col-md-4">
            <img src="<%= comic.cover %>">
        </div>
        <div class="col-md-8">
            <ul class="list-group">
                <li class="list-group-item"><strong>Writer:</strong> <%= comic.writer %></li>
                <li class="list-group-item"><strong>Artist:</strong> <%= comic.artist %></li>
                <li class="list-group-item"><strong>Release Year:</strong> <%= comic.year %></li>
            </ul>
            <div>
                <h4>Notes:</h4>
                <p><%= comic.notes %></p>
            </div>
        </div>
    </div>
<hr />
    <div class="row">
        <div class="col-md-12">
            <h4>Story Details:</h4>
            <p><%- comic.info %></p>
        </div>
    </div>
<br />
    <hr />
    <a href="/comics/edit/<%= id %>" class="btn btn-default">Edit</a>
    <a href="#" data-id="<%= id %>" class="delete-comic btn btn-danger">Delete</a>
<% include ../partials/footer %>    